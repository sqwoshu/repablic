from selenium import webdriver
import pickle
import time
import random


class INSTBot():
    def __init__(self):
        self.browser = webdriver.Chrome('C:\\Users\\123\\PycharmProjects\\untitled\\venv\\chromedriver\\chromedriver.exe')

    def login_in(self):
        browser = self.browser

        browser.get('https://bosslike.ru/login/')
        for cookie in pickle.load(open('session_bosslike', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

        browser.get('https://www.instagram.com/?hl=ru')
        for cookie in pickle.load(open('session_inst', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

    def like_in(self):
        browser = self.browser

        browser.find_element_by_css_selector('.btn-sm').click()

        window_after = browser.window_handles[1]
        browser.switch_to.window(window_after)
        time.sleep(random.randrange(10, 15))

        browser.find_element_by_xpath('//*[@id="react-root"]/section/main/div/header/section/div[1]/div[1]/div/div/button').click()
        time.sleep(2)
        browser.close()

    def auto_like_in(self):
        browser = self.browser

        time.sleep(2)
        browser.get('https://bosslike.ru/tasks/instagram/subscribe/')
        window_before = browser.window_handles[0]

        for i in range(25):
            time.sleep(1)
            try:
                self.like_in()
                time.sleep(2)
                browser.switch_to.window(window_before)

            except Exception:
                time.sleep(2)
                browser.switch_to.window(window_before)
                browser.refresh()


bot = INSTBot()
bot.login_in()
bot.auto_like_in()
