from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium import webdriver
import pickle
import time


class okBot():
    def __init__(self):
        self.browser = webdriver.Chrome('C:\\Users\\123\\PycharmProjects\\untitled\\venv\\chromedriver\\chromedriver.exe')

    def login_ok(self):
        browser = self.browser

        browser.get('https://bosslike.ru/login/')
        for cookie in pickle.load(open('session_bl', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

        browser.get('https://ok.ru/')
        for cookie in pickle.load(open('session_ok', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()



    def auto_follow_ok(self):
        browser = self.browser

        time.sleep(2)
        browser.get('https://bosslike.ru/tasks/odnoklassniki/subscribe/')
        window_before = browser.window_handles[0]

        while True:
            time.sleep(1)
            try:
                self.follow_group_ok()
                time.sleep(2)
                browser.switch_to.window(window_before)

            except Exception:
                try:
                    browser.switch_to.window(window_before)
                    time.sleep(3)

                    browser.find_element_by_css_selector('.btn-muted-light').click()

                    close_teleg = WebDriverWait(browser, 10).until(EC.presence_of_element_located((By.CSS_SELECTOR, ".delete")))
                    close_teleg.click()

                except Exception:
                    browser.close()
                    browser.quit()
                    print('EROR')


    def follow_group_ok(self):
        browser = self.browser

        window_before = browser.window_handles[0]
        browser.switch_to.window(window_before)

        element_ok = WebDriverWait(browser, 10).until(EC.presence_of_element_located((By.CSS_SELECTOR, ".btn-sm")))
        element_ok.click()

        window_after = browser.window_handles[1]
        browser.switch_to.window(window_after)

        try:
            subscribe_ok = WebDriverWait(browser, 20).until(EC.presence_of_element_located((By.XPATH, '//*[@id="hook_Block_AltGroupMainMenu"]/ul/div')))
            subscribe_ok.click()
            time.sleep(2)
            browser.close()


        except Exception:
            follow_ok = WebDriverWait(browser, 20).until(EC.presence_of_element_located((By.XPATH, '//*[@id="hook_Block_MainMenu"]/div/ul/li[1]')))
            follow_ok.click()
            time.sleep(2)
            browser.close()

bot = okBot()
bot.login_ok()
bot.auto_follow_ok()

