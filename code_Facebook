from selenium import webdriver
import pickle
import time
import random


class FacebookBot():
    def __init__(self):
        self.browser = webdriver.Chrome('C:\\Users\\123\\PycharmProjects\\untitled\\venv\\chromedriver\\chromedriver.exe')

    def login(self):
        browser = self.browser

        browser.get('https://bosslike.ru/login/')
        for cookie in pickle.load(open('session_bl', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

        browser.get('https://ru-ru.facebook.com/')
        for cookie in pickle.load(open('session_fbook', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

    def auto_subscribe_facebook(self):
        browser = self.browser

        time.sleep(3)
        browser.get('https://bosslike.ru/tasks/fb/subscribe/')
        window_before = browser.window_handles[0]

        while True:
            time.sleep(2)
            try:
                self.transition_fb()

            except Exception:
                browser.switch_to.window(window_before)
                self.skip_fb()


    def transition_fb(self):
        browser = self.browser
        window_before = browser.window_handles[0]

        browser.find_element_by_css_selector('.btn-sm').click()

        window_after = browser.window_handles[1]
        browser.switch_to.window(window_after)

        time.sleep(random.randrange(20, 25))


        browser.find_element_by_xpath('//*[@id="mount_0_0"]/div/div[1]/div[1]/div[3]/div/div/div[1]/div[1]/div[3]/div/div/div/div[2]/div/div/div[4]/div').click()
        time.sleep(5)

        browser.find_element_by_xpath('//*[@id="mount_0_0"]/div/div[1]/div[1]/div[3]/div/div/div[2]/div/div/div[1]/div[1]/div/div/div[1]/div/div[1]/div/div[1]').click()
        time.sleep(2)

        browser.close()

        browser.switch_to.window(window_before)
        browser.find_element_by_css_selector('.check-task').click()


    def skip_fb(self):
        time.sleep(random.randrange(1, 2))

        skip_1 = self.browser.find_element_by_css_selector('.btn-muted-light ')
        skip_1.click()
        time.sleep(1)

        skip_2 = self.browser.find_element_by_css_selector('.delete')
        skip_2.click()

        self.browser.refresh()



bot = FacebookBot()
bot.login()
bot.auto_subscribe_facebook()
