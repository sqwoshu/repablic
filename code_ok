from selenium import webdriver
import pickle
import time
import random


class okBot():
    def __init__(self):
        self.browser = webdriver.Chrome('C:\\Users\\1\\PycharmProjects\\pythonProject2\\botbosslike\\chromedriver\\chromedriver.exe')

    def login_ok(self):
        browser = self.browser

        browser.get('https://bosslike.ru/login/')
        for cookie in pickle.load(open('session_bosslike', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

        browser.get('https://ok.ru/')
        for cookie in pickle.load(open('session_ok', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

    def like_ok(self):
        browser = self.browser

        browser.find_element_by_css_selector('.btn-sm').click()

        window_after = browser.window_handles[1]
        browser.switch_to.window(window_after)
        time.sleep(random.randrange(10, 15))

        browser.find_element_by_xpath('//*[@id="hook_Block_AltGroupMainMenu"]/ul/div').click()
        time.sleep(2)

        browser.close()

    def auto_like_ok(self):
        browser = self.browser

        time.sleep(2)
        browser.get('https://bosslike.ru/tasks/odnoklassniki/subscribe/')
        window_before = browser.window_handles[0]

        for i in range(10):
            time.sleep(1)
            try:
                self.like_ok()
                time.sleep(2)
                browser.switch_to.window(window_before)

            except Exception:
                try:
                    self.follow_ok()
                    time.sleep(2)
                    browser.switch_to.window(window_before)

                except Exception:

                    time.sleep(2)

                    window_after = browser.window_handles[1]
                    browser.switch_to.window(window_after)
                    browser.close()

                    browser.switch_to.window(window_before)
                    browser.refresh()



    def follow_ok(self):
        browser = self.browser

        window_after = self.browser.window_handles[1]
        self.browser.switch_to.window(window_after)

        time.sleep(5)
        browser.find_element_by_xpath('//*[@id="hook_Block_MainMenu"]/div/ul/li[1]').click()

        time.sleep(2)
        browser.close()

bot = okBot()
bot.login_ok()
bot.auto_like_ok()
