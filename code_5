from selenium import webdriver
from selenium.webdriver.common.keys import Keys

from data import username, password
import time
import random

class VKBot():
    def __init__(self, username, password):

        self.ussername = username
        self.password = password
        self.browser = webdriver.Chrome('C:\\Users\\123\\PycharmProjects\\untitled\\venv\\chromedriver\\chromedriver.exe')

    def login(self):
        browser = self.browser
        browser.get('https://bosslike.ru/login/')
        time.sleep(random.randrange(3, 5))

        username_input = browser.find_element_by_id('User_loginLogin')
        username_input.send_keys(username)

        time.sleep(2)

        password_input = browser.find_element_by_id('User_passwordLogin')
        password_input.send_keys(password)

        password_input.send_keys(Keys.ENTER)
        time.sleep(1)

        browser.get('https://www.instagram.com/')
        time.sleep(3)

        log_vk = browser.find_element_by_xpath('//*[@id="loginForm"]/div/div[1]/div/label')
        pas_vk = browser.find_element_by_xpath('//*[@id="loginForm"]/div/div[2]/div/label')
        log_vk.send_keys(' ')

        time.sleep(2)

        pas_vk.send_keys(' ')
        time.sleep(1)

        pass_vk = browser.find_element_by_xpath('//*[@id="loginForm"]/div/div[3]/button')
        pass_vk.click()
        time.sleep(2)

    def like_vk(self):
        like_vk = self.browser.find_element_by_css_selector('.btn-sm')
        like_vk.click()

        window_after = self.browser.window_handles[1]
        self.browser.switch_to.window(window_after)
        time.sleep(random.randrange(10,15))

        self.browser.find_element_by_xpath('//*[@id="react-root"]/section/main/div/header/section/div[1]/div[1]/div/div/button').click()
        time.sleep(2)
        self.browser.close()

    def auto_like_vk(self):
        time.sleep(2)
        self.browser.get('https://bosslike.ru/tasks/instagram/subscribe/')
        window_before = self.browser.window_handles[0]
        while True:
            time.sleep(1)
            try:
                self.like_vk()
                time.sleep(2)
                self.browser.switch_to.window(window_before)

            except Exception:
                time.sleep(2)
                self.browser.switch_to.window(window_before)
                self.browser.refresh()


bot = VKBot(username, password)
bot.login()
bot.auto_like_vk()
