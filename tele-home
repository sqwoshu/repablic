from selenium import webdriver
from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
import pickle
import time
import random

class TelegramBot():
    def __init__(self):
        options = webdriver.ChromeOptions()
        options.add_argument(
            'user=agend=Mozilla/5.0 (Windows NT 6.1) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/88.0.4324.150 Safari/537.36')

        options.add_argument("--disable-blink-features=AutomationControlled")
        self.browser = webdriver.Chrome(
            executable_path="C:\\Users\\123\\PycharmProjects\\untitled\\venv\\chromedriver\\chromedriver.exe",
            options=options)

    def login_teleg(self):
        browser = self.browser

        browser.get("https://intoli.com/blog/not-possible-to-block-chrome-headless/chrome-headless-test.html")

        browser.get('https://bosslike.ru/login/')
        for cookie in pickle.load(open('session_bl', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()
        time.sleep(5)

        browser.get('https://bosslike.ru/tasks/telegram/subscribe/done17586521/')

    def follow_teleg(self):
        browser = self.browser
        element_teleg = WebDriverWait(browser, 10).until(EC.presence_of_element_located((By.CSS_SELECTOR, ".btn-sm")))
        element_teleg.click()
        time.sleep(2)

    def click_teleg(self):
        browser = self.browser
        try:
            browser.find_element_by_xpath("//*[contains(text(), 'Указанного задания не существует')]")
            time.sleep(1)

            browser.find_element_by_css_selector('.btn-muted-light').click()

            time.sleep(1.5)
            browser.find_element_by_css_selector('.delete').click()

        except Exception:
            browser.find_element_by_css_selector('.btn-sm').click()
            time.sleep(random.randrange(2,2.5))

    def auto_follow_teleg(self):
        browser = self.browser
        while True:
            time.sleep(random.randrange(2,3))
            try:
                self.click_teleg()
            except Exception as ex:
                print(ex)
                browser.close()
                browser.quit()

    def propysk_teleg(self):
        browser = self.browser
        time.sleep(random.randrange(2, 2.5))
        browser.find_element_by_css_selector('.btn-muted-light').click()
        time.sleep(2)
        browser.find_element_by_css_selector('.delete')


bot = TelegramBot()
bot.login_teleg()
bot.auto_follow_teleg()

