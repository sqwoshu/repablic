from selenium.webdriver.common.by import By
from selenium.webdriver.support.ui import WebDriverWait
from selenium.webdriver.support import expected_conditions as EC
from selenium import webdriver
import pickle
import time


class INSTBot():
    def __init__(self):
        self.browser = webdriver.Chrome('C:\\Users\\123\\PycharmProjects\\untitled\\venv\\chromedriver\\chromedriver.exe')

    def login_in(self):
        browser = self.browser

        browser.get('https://bosslike.ru/login/')
        for cookie in pickle.load(open('session_bl', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

        browser.get('https://www.instagram.com/?hl=ru')
        for cookie in pickle.load(open('session_in', 'rb')):
            browser.add_cookie(cookie)
        browser.refresh()

    def follow_in(self):
        browser = self.browser

        browser.find_element_by_css_selector('.btn-sm').click()

        window_after = browser.window_handles[1]
        browser.switch_to.window(window_after)

        try:
            element_in = WebDriverWait(browser, 15).until(EC.presence_of_element_located((By.XPATH, '//*[@id="react-root"]/section/main/div/header/section/div[1]/div[1]')))
            element_in.click()

            time.sleep(1.5)
            browser.close()

        except Exception:
            browser.close()


    def auto_follow_in(self):
        browser = self.browser

        time.sleep(2)
        browser.get('https://bosslike.ru/tasks/instagram/subscribe/')
        window_before = browser.window_handles[0]

        while True:
            time.sleep(1)
            try:
                self.follow_in()
                browser.switch_to.window(window_before)
                
                time.sleep(1)
                browser.find_element_by_css_selector('.check-task').click()

            except Exception:
                try:
                    self.follow_in()
                    browser.switch_to.window(window_before)

                    time.sleep(1)
                    browser.find_element_by_css_selector('.check-task').click()
                    
                except Exception:
                    pass

bot = INSTBot()
bot.login_in()
bot.auto_follow_in()
